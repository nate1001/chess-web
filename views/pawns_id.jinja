

{% extends "base.jinja" %}
{% block title %}Kmode class={{pawn.pclass}}{% endblock %}
{% block title2 %}Pawn Centroid #{{pawn.pclass}} {% endblock %}
{% block content %}

<div style='float:left; padding-left:3em;'>
<h4>pawn centroid # {{ pawn.pclass  }}</h4>
{{ pawn.pawn_centroid.to_svg(400) }}
</div>

<div style='float:left'>
<table>
    <tr><td>count</td><td>{{ pawn.count }}</td></tr>
    <tr><td>hamming avg</td><td>{{ pawn.avg}}</td></tr>
    <tr><td>hamming se</td><td>{{ pawn.stddev}}</td></tr>
    </table>
</div>


<div style='float:left'>
<h4>top opening systems</h4>
<table>
    <tr><td>n</td><td>%</td><td>system</td></tr>
    {% for row in eco %}
    <tr>
        <td>{{row.count}}</td><td>{{row.group }}</td>
        <td>
            <a class='hovershow' href="/opening/var/{{row.openingid}}">
              {{row.eco_name}}
              {{ row.fen.to_svg(400) }}
            </a> 
        </td>
    </tr>
    {% endfor %}
</table>
</div>

<div style='float:left'>
<h4>top opening variations</h4>
<table>
    <tr><td>n</td><td>%</td><td>variation</td></tr>
    {% for row in var1 %}
    <tr>
        <td>{{row.count}}</td><td>{{row.group }}</td>
        <td>
            <a class='hovershow' href="/opening/var/{{row.openingid}}">
              {{row.eco_name}}
              {{ row.fen.to_svg(400) }}
            </a> 
        </td>
    </tr>
    {% endfor %}
</table>
</div>



<div style='clear:both;'/>

{% for pos in rows %}

  <div style='float:left;'>
   <a class='gamelink' href="/game/{{pos.gameid}}">{{pos.gameid}}</a><br/>
    <span class='board_header'>
      {{pos.site}} {{pos.hamming}} {{pos.jaccard}}
    </span>
    <br/>
        {{ pos.pawns.to_svg(250, comp=pos.pawn_centroid)}}
    </div>

{% endfor %}

{% endblock %}

